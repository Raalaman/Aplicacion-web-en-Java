        <servlet-class>Sol.ser.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Salir</servlet-name>
        <servlet-class>Sol.ser.Salir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoCliente</servlet-name>
        <servlet-class>Sol.ser.NuevoCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecuerdoContrasenia</servlet-name>
        <servlet-class>Sol.ser.RecuerdoContrasenia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambioContrasenia</servlet-name>
        <servlet-class>Sol.ser.CambioContrasenia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambiarDatos</servlet-name>
        <servlet-class>Sol.ser.CambiarDatos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PedidosCliente</servlet-name>
        <servlet-class>Sol.ser.PedidosCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerPedido</servlet-name>
        <servlet-class>Sol.ser.VerPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateExcell</servlet-name>
        <servlet-class>Sol.ser.CreateExcell</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionaPedido</servlet-name>
        <servlet-class>Sol.ser.GestionaPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerPedidoAnulado</servlet-name>
        <servlet-class>Sol.ser.VerPedidoAnulado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnulaPedidoRealizacion</servlet-name>
        <servlet-class>Sol.ser.AnulaPedidoRealizacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PedidoRealizacion</servlet-name>
        <servlet-class>Sol.ser.PedidoRealizacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditaArticulo</servlet-name>
        <servlet-class>Sol.ser.EditaArticulo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuscarArticulos</servlet-name>
        <url-pattern>/BuscarArticulos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AreaCliente</servlet-name>
        <url-pattern>/clientes/AreaCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Salir</servlet-name>
        <url-pattern>/Salir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoCliente</servlet-name>
        <url-pattern>/NuevoCliente</url-pattern>
    </servlet-mapping>
