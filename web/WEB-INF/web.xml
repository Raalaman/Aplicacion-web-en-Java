        <servlet-name>RecuerdoContrasenia</servlet-name>
        <url-pattern>/RecuerdoContrasenia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambioContrasenia</servlet-name>
        <url-pattern>/CambioContrasenia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambiarDatos</servlet-name>
        <url-pattern>/clientes/CambiarDatos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CierraPedido</servlet-name>
        <url-pattern>/clientes/CierraPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PedidosCliente</servlet-name>
        <url-pattern>/clientes/PedidosCliente</url-pattern>
    </servlet-mapping>
