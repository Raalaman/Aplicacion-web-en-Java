<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Mapa</servlet-name>
        <servlet-class>Sol.ser.Mapa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStockArticulo</servlet-name>
        <servlet-class>Sol.ajax.GetStockArticulo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditaArticulo</servlet-name>
        <url-pattern>/admin/EditaArticulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mapa</servlet-name>
        <url-pattern>/Mapa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStockArticulo</servlet-name>
        <url-pattern>/api/GetStockArticulo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>FiltroRequest</filter-name>
        <filter-class>Sol.ser.FiltroRequest</filter-class>
        <init-param>
            <param-name>Encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>FiltroCliente</filter-name>
        <filter-class>Sol.ser.FiltroCliente</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroCliente</filter-name>
        <url-pattern>/clientes/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroRequest</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>BuscarArticulos</servlet-name>
        <servlet-class>Sol.ser.BuscarArticulos</servlet-class>
        <init-param>
            <param-name>tamanioPagina</param-name>
            <param-value>12</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AreaCliente</servlet-name>
        <servlet-class>Sol.ser.AreaCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmaAnulacion</servlet-name>
        <servlet-class>Sol.ser.ConfirmaAnulacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CierraPedido</servlet-name>
        <servlet-class>Sol.ser.CierraPedido</servlet-class>
    </servlet>
    <servlet>
